{
  "name": "@onexip/ngx-virtual-scroller-flexible",
  "version": "1.0.4",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:publish": "npm run build && npm publish --access=public ./dist/ngx-virtual-scroller-flexible",
    "watch": "ng build --watch --configuration development",
    "yalc:push": "cd ./dist/ngx-virtual-scroller-flexible && yalc push --private",
    "build:yalc:push": "ng build && cd ./dist/ngx-virtual-scroller-flexible && yalc push --private --prefix",
    "watch:yalc:push": "ng build --watch --configuration development & nodemon --watch dist --delay 3000ms --exec 'cd ./dist/ngx-virtual-scroller-flexible && yalc push --private'",
    "test": "ng test",
    "build:pack": "ng build && npm pack dist/ngx-virtual-scroller-flexible/"
  },
  "dependencies": {
    "@angular/animations": "20.1.0",
    "@angular/cdk": "20.1.0",
    "@angular/common": "20.1.0",
    "@angular/compiler": "20.1.0",
    "@angular/core": "20.1.0",
    "@angular/forms": "20.1.0",
    "@angular/platform-browser": "20.1.0",
    "@angular/platform-browser-dynamic": "20.1.0",
    "@angular/router": "20.1.0",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "20.1.0",
    "@angular/cli": "20.1.0",
    "@angular/compiler-cli": "20.1.0",
    "@types/jasmine": "5.1.8",
    "jasmine-core": "5.8.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "ng-packagr": "20.1.0",
    "nodemon": "3.1.10",
    "typescript": "5.8.3"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "singleAttributePerLine": true,
    "printWidth": 80
  },
  "description": "fast and flexible virtual scroller which can handle items with different sizes perfectly",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onexip/ngx-virtual-scroller-flexible.git"
  },
  "keywords": [
    "angular",
    "responsive",
    "different-sized",
    "children",
    "virtual",
    "scroller"
  ],
  "author": "onexip",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/onexip/ngx-virtual-scroller-flexible/issues"
  },
  "homepage": "https://github.com/onexip/ngx-virtual-scroller-flexible#readme"
}
